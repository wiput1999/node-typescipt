{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  }
}
