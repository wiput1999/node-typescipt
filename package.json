{
  "name": "node-typescipt",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Wiput Pootong (wiput.pootong@gmail.com)",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && ncc build -o build -m ./src/index.ts",
    "clean": "rimraf build",
    "dev": "nodemon",
    "start": "ts-node ./src/index.ts",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
    "test": "yarn test:lint",
    "test:lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "format": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.0",
    "@zeit/ncc": "^0.21.1",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3"
  }
}
